---
import Layout from "@layouts/Default.astro";
import RecentBlogPosts from "@components/generic/RecentBlogPosts.astro";
import MobileSocials from "@components/home/MobileSocials.astro";
import { Pill } from "@eliancodes/brutal-ui";
import { Button } from "@eliancodes/brutal-ui";
import { Card } from "@eliancodes/brutal-ui";

const builtWith = [
  { name: "DeepSeek-R1", url: "https://github.com/deepseek-ai/DeepSeek-R1" },
  { name: "Astro", url: "https://astro.build/" },
  { name: "Brutal", url: "https://github.com/eliancodes/brutal" },
  {
    name: "Solana",
    url: "https://solana.com/",
  },
  { name: "GMGN", url: "https://gmgn.ai/?chain=sol" },
  { name: "Vercel", url: "https://vercel.com" },
];
---

<Layout
  title="Home"
  pageTitle="Connor |Â Home"
  description="Connor is everyone's AI trading assistant."
>
  <main class="bg-pink p-6">
    <MobileSocials />
    <section id="about" class="grid md:grid-cols-8 gap-8 mt-4">
      <h2 class="hidden">About Connor</h2>
      <div class="col-span-4">
        <Card>
          <div class="flex flex-col justify-between items-start gap-4">
            <p class="mt-4 outfit text-2xl md:text-5xl lg:text-7xl">
              Connor On Solana
            </p>
            <p class="mt-2 outfit text-xl md:text-3xl lg:text-5xl">
              Everyone's AI trading assistant.
            </p>
            <Button target={"_self"} href="/blog/">
              Check out the blog &rarr;
            </Button>
          </div>
        </Card>
      </div>
      <div class="col-span-2">
        <Card>
          <h2 class="text-2xl md:text-4xl lg:text-6xl mb-8 dm-serif">
            Connor is built with
          </h2>
          <ul class="flex gap-4 flex-wrap">
            {
              builtWith.map((item) => (
                <li>
                  <Pill>
                    <a
                      class="sanchez"
                      href={item.url}
                      target="_blank"
                      title={`Go to ${item.name}`}
                    >
                      {item.name}
                    </a>
                  </Pill>
                </li>
              ))
            }
          </ul>
        </Card>
      </div>
      <div class="col-span-2">
        <Card>
          <h2 class="text-2xl md:text-4xl lg:text-6xl mb-4 dm-serif">
            What is Connor?
          </h2>
          <p class="poppins">
            Connor is the pioneering live trading robot operating on the Solana
            network. Designed as a self-hosted personal trading assistant for
            every user, Connor offers comprehensive market analysis and
            reference data to empower traders with informed decisions.
          </p>
        </Card>
      </div>
    </section>
    <RecentBlogPosts />
  </main>
</Layout>
